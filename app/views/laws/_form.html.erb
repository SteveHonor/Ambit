<h>Editar lei</h>
<div class="panel">
  <div class="form-group">
    <div class="row">
    <%= form_for(@law) do |f| %>
    <% if @law.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@law.errors.count, "error") %> prohibited this law from being saved:</h2>
      <ul>
        <% @law.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>


    <div class="col-sm-1">
      <%= f.label :number, class: "control-label" %>
      <%= f.text_field :number, class: "form-control"  %>
    </div>

    <div class="col-sm-1">
      <%= f.label :article, class: "control-label" %>
      <%= f.text_field :article, class: "form-control"  %>
    </div>

    <div class="col-sm-10">
      <%= f.label :description, class: "control-label"   %>
      <%= f.text_field :description, class: "form-control"  %>
    </div>
</div>

    <div class="row">
      <div class="panel-footer">
        <div class="actions">
          <%= f.submit "Editar", class: "btn btn-primary"  %>
        </div>

        <div class="actions pull-left">
          <%= link_to f.button("Voltar", class: "btn"), laws_path %>
        </div>
      </div>
    </div>

    <% end %>
  </div>
</div>
</div>
