
<%= form_for(@law) do |f| %>

<% if @law.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@law.errors.count, "error") %> prohibited this law from being saved:</h2>
  <ul>
    <% @law.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="col-sm-1">
  <div class="form-group fg-line">
    <%= f.label 'Numero', class: "control-label" %>
    <%= f.text_field :number, placeholder: 'Número', class: "form-control"  %>
  </div>
</div>

<div class="col-sm-1">
  <div class="form-group fg-line">
    <%= f.label 'Artigo', class: "control-label" %>
    <%= f.text_field :article, placeholder: 'Artigo', class: "form-control"  %>
  </div>
</div>

<div class="col-sm-10">
  <div class="form-group fg-line">
    <%= f.label 'Descrição', class: "control-label"   %>
    <%= f.text_field :description, placeholder: 'Descrição', class: "form-control"  %>
  </div>
</div>

<div class="text-right">
  <%= link_to f.button("Voltar", class: "btn btn-link waves-effect waves-effect"), laws_path %>
  <%= f.button "Editar", class: "btn bgm-orange waves-effect waves-effect"  %>
</div>
<% end %>
