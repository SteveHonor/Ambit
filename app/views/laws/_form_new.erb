  </div>
</div>

<div class="col-sm-1">
  <div class="form-group fg-line">
    <%= f.label 'Artigo', class: "control-label" %>
    <%= f.text_field :article, placeholder: 'Artigo', class: "form-control"  %>
  </div>
</div>

<div class="col-sm-10">
  <div class="form-group fg-line">
    <%= f.label 'Descrição', class: "control-label"   %>
    <%= f.text_field :description, placeholder: 'Descrição', class: "form-control"  %>
  </div>
</div>

<div class="text-right ">
  <a href="/laws"><button name="button" type="submit" class="btn btn-link">Voltar</button></a>
  <button class="btn bgm-orange"><i class="fa fa-save"></i> Salvar</button>
