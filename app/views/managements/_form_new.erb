<div class="form-group">
  <%= form_for(@management) do |f| %>
  <div class="row">
    <% if @management.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@management.errors.count, "error") %> prohibited this management from being saved:</h2>
      <ul>
        <% @management.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="col-sm-2" style="padding: 0px;">
      <div class="row">
        <div class="sub_title">Braz√£o</div>
        <%= image_tag(@management.avatar.url, style: "width: 100%") %>
        <span class="btn btn-primary btn-sm btn-file", style="width: 100%">
          Escolha um foto <%=  f.file_field :avatar %>
          <%=  f.hidden_field :avatar_cache %>
        </span>
      </div>
    </div>

    <div class="col-sm-10" style="padding: 0px;">
      <div class="col-sm-12">
        <%= f.label :name, class: "control-label"%><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-sm-12">
        <%= f.label :prefecture, class: "control-label"%><br>
        <%= f.text_field :prefecture, class: "form-control" %>
      </div>
      <div class="col-sm-12">
        <%= f.label :address, class: "control-label"%><br>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="col-sm-2">
        <%= f.label :address_number, class: "control-label"%><br>
        <%= f.text_field :address_number, class: "form-control" %>
      </div>
      <div class="col-sm-2">
        <%= f.label :zip_code, class: "control-label"%><br>
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>
      <div class="col-sm-2">
        <%= f.label :district, class: "control-label"%><br>
        <%= f.text_field :district, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.label :state, class: "control-label"%><br>
        <%= f.text_field :state, class: "form-control" %>
      </div>
      <div class="col-sm-3">
        <%= f.label :phone, class: "control-label"%><br>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>

  </div>
  <div class="panel-footer">
    <div class="actions">
      <%= f.submit "Adicionar", class: "btn btn-primary"  %>
    </div>

    <div class="actions pull-left">
      <%= link_to f.button("Voltar", class: "btn"), managements_path %>
    </div>
  </div>
  <% end %>
</div>
