<h><div class="col-sm-2 title">Unidade</div>
  <div id="actin-btn" class="pull-right">
    <%= link_to '<i class="fa fa-plus"></i> <b>Nova Unidade</b>'.html_safe, new_management_path, class: "btn btn-primary btn-sm" %>
  </div>
</h>

<div class="form-group">
  <div class="row">
    <table  id="table-managements" class="table table-striped display">
      <thead class="table-heading">
        <tr>
          <th width="auto">Name</th>
          <th width="auto">Prefecture</th>
          <th width="auto">State</th>
          <th width="auto">Phone</th>
          <th width="10%">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @managements.each do |management| %>
        <tr>
          <td><%= management.name %></td>
          <td><%= management.prefecture %></td>
          <td><%= management.state %></td>
          <td><%= management.phone %></td>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-sm" data-toggle="dropdown"><i class="fa fa-plus"></i> Ações</button>
              <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
              </button>

              <ul class="dropdown-menu" role="menu">
                <li><%= link_to '<i class="fa fa-search"></i> Visualizar'.html_safe, management %></li>
                <li><%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_management_path(management) %></li>
                <li><%= link_to '<i class="fa fa-trash-o"></i> Deletar'.html_safe, management, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
$(document).ready(function() {
  var table = $('#table-managements').dataTable({ "dom": '<tp>' });
});
</script>
