<div class="block-header">
  <h2>
    <a href="/" title="voltar">
      <i class="zmdi zmdi-long-arrow-left zmdi-hc-lg"></i>
    </a> Editar Usu√°rio
  </h2>
</div>

<%= form_for(@user, url: user_path(@user), :method=>:put) do |f| %>
<div class="card">
  <div class="card-body card-padding">
    <div class="row">
      <div class="col-sm-5">
        <div class="form-group fg-line fg-line">
          <%= f.label :name, class: "control-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-5">
        <div class="form-group fg-line fg-line">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="form-group fg-line fg-line">
          <%= f.label :user_type, class: "control-label" %>
          <%= f.select(:user_type, options_for_select([["Administrador","administrator"],["Fiscal","fiscal"]]),{}, class: "form-control") %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4">
        <div class="form-group fg-line fg-line">
          <%= f.label :password, class: "control-label" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group fg-line fg-line">
          <%= f.label :password_confirmation, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="form-group fg-line fg-line">
          <%= f.label :current_password, class: "control-label" %>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="form-group fg-line fg-line">
          <%= f.label :management, class: "control-label" %><br />
          <%= f.select :management_id, options_for_select(Management.all.map{|s|[s.name, s.id]}), {}, class: "form-control " %>
        </div>
      </div>
    </div>

    <div class="pull-right">
      <%= link_to "Voltar", users_path, class: "btn btn-link waves-effect" %>
      <button class="btn bgm-orange waves-effect"> Salvar</button>
    </div>
    <div class="clearfix"></div>
  </div>
  <% end %>
