<h>Edit user</h>
<div class="panel">
  <div class="form-group">
    <%= form_for(@user, url: user_path(@user), :method=>:put) do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-2" style="padding: 0px;">
          <div class="row">
            <div class="sub_title">Avatar</div>
            <%= image_tag(@user.avatar.url, style: "width: 100%") %>

            <span class="btn btn-primary btn-sm btn-file", style="width: 100%">
              Escolha um foto <%=  f.file_field :avatar %>
              <%=  f.hidden_field :avatar_cache %>
            </span>
          </div>
        </div>

        <div class="col-sm-10">
          <div class="row">
            <div class="sub_title">Dados do Usuário</div>
          </div>

          <div class="row">
            <div class="col-sm-5">
              <%= f.label :name, class: "control-label" %>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>

            <div class="col-sm-5">
              <%= f.label :email, class: "control-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="col-sm-2">
              <%= f.label :admin, class: "control-label" %>
              <%= f.select(:admin, options_for_select([["Não",false],["Sim",true]]),{}, class: "form-control") %>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-4">
              <%= f.label :password, class: "control-label" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="col-sm-4">
              <%= f.label :password_confirmation, class: "control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>


            <div class="col-sm-4">
              <%= f.label :current_password, class: "control-label" %>
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="panel-footer">
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-primary"  %>
      </div>

      <div class="actions pull-left">
        <%= link_to f.button("Voltar", class: "btn"), :back, method: :get  %>
      </div>
    </div>
  </div>
  <% end %>
</div>
