<div class="form-group">
  <%= form_for(@user, url: user_path(@user), :method=>:put) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="sub_title">Dados do Usu√°rio</div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-5">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="col-sm-5">
      <%= f.label :email, class: "control-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="col-sm-2">
      <%= f.label :user_type, class: "control-label" %>
      <%= f.select(:user_type, options_for_select([["Administrador","administrator"],["Fiscal","fiscal"]]),{}, class: "form-control") %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="col-sm-4">
      <%= f.label :password_confirmation, class: "control-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="col-sm-4">
      <%= f.label :current_password, class: "control-label" %>
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= f.label :management, class: "control-label" %><br />
      <%= f.select :management_id, options_for_select(Management.all.map{|s|[s.name, s.id]}), {}, class: "form-control " %>
    </div>
  </div>


  <div class="col-sm-12">
    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary btn-sm"  %>
    </div>

    <div class="actions pull-left">
      <%= link_to f.button("Voltar", class: "btn btn-sm"), users_path %>
    </div>
  </div>
  <% end %>
